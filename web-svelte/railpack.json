{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": ["bun install"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["bun run build"]
    }
  },
  "deploy": {
    "startCommand": "node build/index.js",
    "env": {
      "BODY_SIZE_LIMIT": "52428800"
    }
  }
}
